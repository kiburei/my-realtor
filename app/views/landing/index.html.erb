
  <div class="row">
    <% @properties.each do |property| %>
    <div class="col s3">
      <div class="card">
         <div class="card-image waves-effect waves-block waves-light">
           <%= image_tag('appartment.jpg', class: 'activator') %>
         </div>
         <div class="card-content">
           <span class="card-title activator grey-text text-darken-4"><%= property.name %><i class="material-icons right">more_vert</i></span>
           <%= property.units.where(occupied: false).count %> Vacancies available
           <%= link_to 'Listing Details', property_path(property), class: 'btn' %>
         </div>
         <div class="card-reveal">
           <span class="card-title grey-text text-darken-4"><%= property.name %><i class="material-icons right">close</i></span>
           <p><%= property.notes %></p>
         </div>
      </div>
    </div>

    <% end %>
  </div>
  <div class="row">
    <div class="col s6">
      <%= link_to 'Landloard', properties_path, class: 'btn' %>
    </div>
    <div class="col s6">
      <%= link_to 'Tenant', properties_path, class: 'btn' %>
    </div>
  </div>
