<!DOCTYPE html>
<html>
  <head>
    <title>M|R</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="transparent">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo"><i class="material-icons">cloud</i>My Realtor</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <% if current_user.landlord? %>
            <li><%= link_to "My Properties", properties_path %></li>
          <% end %>
          <% if current_user.tenant? %>
            <li><%= link_to "My House", properties_path %></li>
          <% end %>
          <li><%= link_to "logout", destroy_user_session_path(session), method: 'delete' %></li>
        <% end %>
        <li><a href="badges.html"><i class="material-icons">account_circle</i></a></li>
        <li><a href="mobile.html"><i class="material-icons">more_vert</i></a></li>
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <li><a href="sass.html"><i class="material-icons">search</i></a></li>
        <li><a href="badges.html"><i class="material-icons">view_module</i></a></li>
        <li><a href="collapsible.html"><i class="material-icons">refresh</i></a></li>
        <li><a href="mobile.html"><i class="material-icons">more_vert</i></a></li>
      </ul>
    </div>
  </nav>
  <body>
      <%= yield %>
  </body>
</html>
